# TrBlockerAd Configuration
# Copy this file to .env and modify the values

# Admin password for the dashboard
WEBPASSWORD=change_this_password

# Timezone (https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=Europe/Madrid

# Upstream DNS servers (separated by semicolon)
PIHOLE_DNS=1.1.1.1;1.0.0.1;8.8.8.8;8.8.4.4

# Enable DNSSEC validation
DNSSEC=true

# Query logging (true/false)
QUERY_LOGGING=true

# Days to keep logs in database
LOG_RETENTION_DAYS=365
